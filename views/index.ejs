<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')  %> 

<body class="home">
  <%- include('./partials/header')  %> 

    <main class="container">
        <div class="row">
            <section class="productos col-12 col-md-8 col-lg-9">
                <div class="row py-4 px-2">
                  <% productos.forEach(producto => { %>
                    <article class="col-12 col-md-6 col-lg-4">
                    <img src="/images/<%= producto.image %>"  class="img-fluid" alt="" />
                    <h4><%= producto.title %> </h4>
                    <p>
                        <%= producto.description %> 
                    </p>
                    <a href="">ver m√°s</a>
                </article>
                  <% }) %>
               
               
            </div>
            </section>
            <aside class="col-12 col-md-4 col-lg-3">
                <section class="tutoriales">
                    <h3>Tutoriales</h3>
                    <% tutoriales.forEach(tutorial => { %>
                      <article>
                        <div class="row">
                            <div class="col-5">
                                <img src="/images/<%= tutorial.image %> " alt="" />
                            </div>
                            <div class="col-7">
                                <p><%= tutorial.name %> </p>
                            </div>
                        </div>
                    </article>
                    <% }) %>
                   
                </section>
                <section class="publicidad">
                    <h3>Publicidad</h3>
                    <article>
                        <img src="/images/ad-01.jpg" alt="" />
                        <img src="/images/ad-02.jpg" alt="" />
                    </article>
                </section>
            </aside>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>