<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')  %> 

<body class="home">
  <%- include('./partials/header')  %> 

    <main class="container">
        <div class="row">
            <section class="productos col-12 col-md-8 col-lg-9 ">
                <h3>Celulares</h3>

                <div class="celulares row py-4 gx-3">
                    <h4>Nuevos</h4>
                  <% nuevos.forEach(producto => { %>
                    <div class="col-12 col-md-6 col-lg-4 my-2">
                        <article class="p-3">
                            <img src="/images/<%= producto.image %>"  class="img-fluid" alt="" />
                                <h4><%= producto.title %> </h4>
                                <p>
                                    <%= producto.description %> 
                                </p>
                                <a href="/products/detail/<%= producto.id %>">ver más</a>
                           
                        </article>
                    </div>
                  <% }) %>
                  <h4>Refaccionados</h4>
                  <% refact.forEach(producto => { %>
                    <div class="col-12 col-md-6 col-lg-4 my-2">
                        <article class="p-3">
                            <img src="/images/<%= producto.image %>"  class="img-fluid" alt="" />
                                <h4><%= producto.title %> </h4>
                                <p>
                                    <%= producto.description %> 
                                </p>
                                <a href="/products/detail/<%= producto.id %>">ver más</a>
                           
                        </article>
                    </div>
                  <% }) %>
                  <h4>Usados</h4>
                  <% usados.forEach(producto => { %>
                    <div class="col-12 col-md-6 col-lg-4 my-2">
                        <article class="p-3">
                            <img src="/images/<%= producto.image %>"  class="img-fluid" alt="" />
                                <h4><%= producto.title %> </h4>
                                <p>
                                    <%= producto.description %> 
                                </p>
                                <a href="/products/detail/<%= producto.id %>">ver más</a>
                           
                        </article>
                    </div>
                  <% }) %>
            </div>
            </section>
            <aside class="col-12 col-md-4 col-lg-3">
                <section class="tutoriales">
                    <h3>Tutoriales</h3>
                    <% tutoriales.forEach(tutorial => { %>
                      <article>
                        <div class="row">
                            <div class="col-5">
                                <img src="/images/<%= tutorial.image %> " alt="" />
                            </div>
                            <div class="col-7">
                                <p><%= tutorial.name %> </p>
                            </div>
                        </div>
                    </article>
                    <% }) %>
                   
                </section>
                <section class="publicidad">
                    <h3>Publicidad</h3>
                    <article>
                        <img src="/images/ad-01.jpg" alt="" />
                        <img src="/images/ad-02.jpg" alt="" />
                    </article>
                </section>
            </aside>
        </div>
    </main>

    <%- include('./partials/scripts')  %> 

</body>

</html>